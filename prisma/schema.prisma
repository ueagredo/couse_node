generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int    @id @default(autoincrement())
  name  String
  email String @unique
  password String
  role Role
  appointments Appointment[]
}

model Appointment {
  id          Int      @id @default(autoincrement())
  date        DateTime
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      Int
  timeBlock   TimeBlock @relation(fields: [timeBlockId], references: [id])
  timeBlockId Int

}

model TimeBlock {
  id          Int          @id @default(autoincrement())
  startTime   DateTime
  endTime     DateTime
  appointments Appointment[]
}

enum Role {
  ADMIN
  USER
}